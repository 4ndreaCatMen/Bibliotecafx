<hibernate-configuration>
    <session-factory>
        <!-- Configuraci칩n de conexi칩n a MySQL -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Biblioteca?useSSL=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <!-- Dialecto para MySQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Actualizaci칩n autom치tica de la base de datos -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mostrar consultas SQL en consola -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Mapeo de entidades -->
        <mapping class="org.example.modelo.Libro"/>
        <mapping class="org.example.modelo.Autor"/>
    </session-factory>
</hibernate-configuration>
